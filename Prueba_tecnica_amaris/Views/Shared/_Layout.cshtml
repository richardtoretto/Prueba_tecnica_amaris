<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!--BOOSTRAPS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!--JQUERYS  -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <!--CDN DataTables-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.css" />
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.js"></script>


    <!-- SWEETALERTA-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!--STYLES-->
    <link rel="stylesheet" type="text/css" href="~/css/header.css" />


</head>

<body>


    <div class="cont">


        <nav>

            <img src="~/image/Amaris.png" alt="imagen" />

            <button id="btn-menu"><label for="menu"><img id="ico_menu" src="~/image/menu.png" width="10px" alt="imagen" /></label></button>
            <input type="checkbox" id="menu">

            <div id="ocultar">

                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="Employees" asp-action="datatable">Datatable</a>
                    </li>
                </ul>

            </div>

        </nav>

        <br />
        <br />
        <br />

        <div>
            <main role="main" class="pb-3">



                @RenderBody()


            </main>
        </div>


        <footer class="border-top footer text-muted ">
            <div class="container text-center">
                &copy; 2023 - Prueba_tecnica_amaris
            </div>
        </footer>



        @await RenderSectionAsync("Scripts", required: false)


    </div>

</body>
</html>
